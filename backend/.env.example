# Application Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
APP_URL=http://localhost:3000

# Database Configuration (local development)
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=tumapay_user
DB_PASSWORD=xxxxxxxxxxxxxxxx
DB_DATABASE=tumapay_db
DB_SYNCHRONIZE=false
DB_LOGGING=true

# Better Auth Configuration
BETTER_AUTH_SECRET=xxxxxxxxxxxxxxxx-change-this-to-secure-random-string-minimum-32-chars
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_TRUST_HOST=true

# JWT Authentication Configuration
# Generate secure random strings for production (minimum 32 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET=change-this-to-secure-random-string-for-access-tokens-min-32-chars
JWT_REFRESH_SECRET=change-this-to-secure-random-string-for-refresh-tokens-min-32-chars
JWT_ACCESS_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (for Better Auth email verification)
# For development, you can use Gmail with an app password
# Or use a service like Mailtrap, SendGrid, etc.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=xxxxxxxxxxxxxxxx
SMTP_FROM_NAME=TumaPay
SMTP_FROM_EMAIL=noreply@tumapay.com

# Redis Configuration (local development)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=xxxxxxxxxxxxxxxx

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=debug

# M-Pesa Daraja API Configuration
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your_consumer_key_here
MPESA_CONSUMER_SECRET=your_consumer_secret_here
MPESA_PASSKEY=your_passkey_here
MPESA_SHORTCODE=174379
MPESA_INITIATOR_NAME=testapi
MPESA_INITIATOR_PASSWORD=your_initiator_password_here
MPESA_CALLBACK_URL=https://your-domain.com/api/v1

# M-Pesa B2C Sandbox Bypass (set to 'true' to simulate successful B2C payments in sandbox)
# This is useful for testing wallet withdrawals without M-Pesa sandbox limitations
# In production, this should ALWAYS be 'false'
MPESA_B2C_BYPASS_SANDBOX=true

# Binance API Configuration
# Get your API keys from: https://www.binance.com/en/my/settings/api-management
# For testnet: https://testnet.binance.vision/
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true

# CurrencyAPI Configuration (for exchange rates)
# Get your API key from: https://currencyapi.com/
CURRENCY_API_KEY=your_currency_api_key_here
CURRENCY_API_BASE_URL=https://api.currencyapi.com/v3

# TRON Blockchain Configuration
# Network: 'mainnet' for production, 'nile' for testnet
# Get testnet wallet from: https://nileex.io/join/getJoinPage
# Get testnet TRX from faucet: https://nileex.io/
TRON_NETWORK=nile
TRON_API_URL=https://nile.trongrid.io
TRON_PRIVATE_KEY=your_testnet_private_key_here
TRON_WALLET_ADDRESS=your_testnet_wallet_address_here
# USDT TRC20 contract (Mainnet: TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t)
TRON_USDT_CONTRACT=TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t
TRON_PARTNER_WALLET=partner_wallet_address_here
# Max fee limit in SUN (100 TRX = 100,000,000 SUN)
TRON_MAX_FEE_LIMIT=100000000
# Required confirmations (19 = solid block on TRON)
TRON_REQUIRED_CONFIRMATIONS=19

# Flutterwave Payment Configuration
# Sign up at: https://flutterwave.com/
# Get your credentials from: Dashboard > Settings > API Keys
# Environment: 'sandbox' for testing, 'production' for live
FLUTTERWAVE_PUBLIC_KEY=your_public_key_here
FLUTTERWAVE_SECRET_KEY=your_secret_key_here
FLUTTERWAVE_ENCRYPTION_KEY=your_encryption_key_here
FLUTTERWAVE_ENVIRONMENT=sandbox
# Webhook configuration (configure after deployment)
FLUTTERWAVE_WEBHOOK_URL=https://your-domain.com/api/v1/payment-providers/callback/flutterwave
FLUTTERWAVE_WEBHOOK_HASH=your_webhook_hash_here

# Cloudinary Configuration (for document uploads)
# Sign up at: https://cloudinary.com/
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here
CLOUDINARY_UPLOAD_FOLDER=tumapay/kyb-documents
