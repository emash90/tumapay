# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=4000
API_PREFIX=api/v1
APP_URL=http://localhost:4000
FRONTEND_URL=http://localhost:5173

# ============================================
# Database Configuration (Docker context)
# ============================================
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=tumapay_user
DB_PASSWORD=your_database_password_here
DB_DATABASE=tumapay_db
DB_SYNCHRONIZE=true
DB_LOGGING=false

# ============================================
# Better Auth Configuration
# ============================================
# Generate a secure random string (minimum 32 characters)
# Example: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
BETTER_AUTH_SECRET=your-secret-key-minimum-32-chars-change-in-production
BETTER_AUTH_URL=http://localhost:4000
BETTER_AUTH_TRUST_HOST=true

# ============================================
# Email Configuration
# ============================================
# For Gmail: Use app-specific password from https://myaccount.google.com/apppasswords
# For SendGrid: Use your SendGrid API key as password with smtp.sendgrid.net
# For other providers: Use your SMTP credentials
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password-or-api-key
SMTP_FROM_NAME=TumaPay
SMTP_FROM_EMAIL=noreply@tumapay.com

# ============================================
# Redis Configuration (Docker context)
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ============================================
# CORS Configuration
# ============================================
# Space-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173 http://localhost:3000

# ============================================
# Logging
# ============================================
LOG_LEVEL=debug

# ============================================
# PostgreSQL Configuration (for postgres service)
# ============================================
POSTGRES_DB=tumapay_db
POSTGRES_USER=tumapay_user
POSTGRES_PASSWORD=your_postgres_password_here
PGDATA=/var/lib/postgresql/data

# ============================================
# PgAdmin Configuration
# ============================================
PGADMIN_DEFAULT_EMAIL=admin@tumapay.com
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password_here

# ============================================
# M-Pesa Daraja API Configuration
# ============================================
# Sign up at https://developer.safaricom.co.ke
# Use sandbox credentials for development, production credentials for live
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your_mpesa_consumer_key_here
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret_here
MPESA_PASSKEY=your_mpesa_passkey_here
MPESA_SHORTCODE=your_shortcode_here
MPESA_INITIATOR_NAME=your_initiator_name_here
MPESA_INITIATOR_PASSWORD=your_initiator_password_here
MPESA_CALLBACK_URL=https://your-domain.com/api/v1/mpesa/callback

# ============================================
# ExchangeRate-API.com Configuration
# ============================================
# Sign up at https://www.exchangerate-api.com to get your FREE API key
# Free plan: 1,500 requests/month with support for 160+ currencies including crypto (USDT, BTC, ETH)
# No credit card required!
CURRENCY_API_KEY=your_exchangerate_api_key_here
CURRENCY_API_BASE_URL=https://v6.exchangerate-api.com/v6/
CURRENCY_API_CACHE_TTL=900

# ============================================
# Binance API Configuration
# ============================================
# For testnet: https://testnet.binance.vision/
# For production: https://www.binance.com/en/support/faq/360002502072
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true

# ============================================
# TRON Blockchain Configuration
# ============================================
# Network: 'mainnet' for production, 'nile' for testnet
TRON_NETWORK=nile

# API URL for TRON network
# Mainnet: https://api.trongrid.io
# Nile testnet: https://nile.trongrid.io
TRON_API_URL=https://nile.trongrid.io

# Your TRON wallet private key (NEVER COMMIT REAL KEYS TO GIT)
# Generate at: https://www.trongrid.io/
TRON_PRIVATE_KEY=your_tron_private_key_here

# Your TRON wallet address
TRON_WALLET_ADDRESS=your_tron_wallet_address_here

# USDT TRC20 contract address
# Mainnet: TR7NHqjeKQxGTCi8q8ZY4pL8otSzgjLj6t
# Nile testnet: TXLAQ63Xg1NAzckPwKHvzw7CSEmLMEqcdj
TRON_USDT_CONTRACT=TXLAQ63Xg1NAzckPwKHvzw7CSEmLMEqcdj

# Partner TRON wallet address for USDT transfers
TRON_PARTNER_WALLET=partner_tron_wallet_address_here

# Maximum fee limit for transactions in SUN (1 TRX = 1,000,000 SUN)
TRON_MAX_FEE_LIMIT=100000000

# Required confirmations before considering transaction complete
TRON_REQUIRED_CONFIRMATIONS=19
