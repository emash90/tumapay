# Application Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1
APP_URL=http://localhost:3000

# Database Configuration (Docker context)
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=tumapay_user
DB_PASSWORD=xxxxxxxxxxxxxxxx
DB_DATABASE=tumapay_db
DB_SYNCHRONIZE=true
DB_LOGGING=false

# Better Auth Configuration
BETTER_AUTH_SECRET=xxxxxxxxxxxxxxxx-change-this-to-secure-random-string-minimum-32-chars
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_TRUST_HOST=true

# Email Configuration (for Better Auth email verification)
# For development, you can use Gmail with an app password
# Or use a service like Mailtrap, SendGrid, etc.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=xxxxxxxxxxxxxxxx
SMTP_FROM_NAME=TumaPay
SMTP_FROM_EMAIL=noreply@tumapay.com

# Redis Configuration (Docker context)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=xxxxxxxxxxxxxxxx

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# Logging
LOG_LEVEL=debug

# PostgreSQL Configuration (for postgres service)
POSTGRES_DB=tumapay_db
POSTGRES_USER=tumapay_user
POSTGRES_PASSWORD=xxxxxxxxxxxxxxxx
PGDATA=/var/lib/postgresql/data

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@tumapay.com
PGADMIN_DEFAULT_PASSWORD=xxxxxxxxxxxxxxxx

# ExchangeRate-API.com Configuration (for currency conversion)
# Sign up at https://www.exchangerate-api.com to get your FREE API key
# Free plan: 1,500 requests/month with support for 160+ currencies including crypto (USDT, BTC, ETH)
# No credit card required!
CURRENCY_API_KEY=your_exchangerate_api_key_here
CURRENCY_API_BASE_URL=https://v6.exchangerate-api.com/v6/
CURRENCY_API_CACHE_TTL=900 # 15 minutes in seconds
